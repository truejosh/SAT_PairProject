@model IEnumerable<SAT_Pair_Project.DATA.EF.Student>

@{
    ViewBag.Title = "StudentsGrid";
}

<h2>StudentsGrid</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-2 border border-dark m-2">
                <a href="@Url.Action("Details", "Students", new { id = item.Id })">
                    <img src="~/Content/assets/students/@item.PhotoUrl" />
                </a>
                <a href="@Url.Action("Details", "Students", new { id = item.Id })">@item.FullName</a>
                <hr />
                <div>Major: @item.Major</div>
                <div >Status: @item.StudentStatus.SSName</div>
            </div>
        }

    </div>




