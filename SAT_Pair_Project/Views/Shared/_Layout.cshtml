<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SAT Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>SAT Project</title>


    <!-- loader-->
    @*<link href="~/Content/assets/css/pace.min.css" rel="stylesheet" />
        <script src="~/Content/assets/js/pace.min.js"></script>*@

    <!--favicon-->
    <link rel="icon" href="~/Content/assets/images/favicon.ico" type="image/x-icon">


</head>
<body class="bg-theme bg-theme1">

    <!-- Start wrapper-->
    <div id="wrapper">

        <!--Start sidebar-wrapper-->
        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">

                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">SAT Admin</h5>
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">MAIN NAVIGATION</li>
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa fa-home"></i> <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Contact", "Home")">
                        <i class="fa fa-comment"></i> <span>Contact</span>
                    </a>
                </li>


                @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                {
                    <li>
                        <a href="@Url.Action("Index", "Enrollments")">
                            <i class="fa fa-graduation-cap"></i> <span>Enrollments</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "ScheduledClasses")">
                            <i class="fa fa-calendar"></i> <span>Scheduled Classes</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Students")">
                            <i class="zmdi zmdi-face"></i> <span>Students</span>
                        </a>
                    </li>

                }
                @if (User.IsInRole("Admin"))

                {

                    <li>
                        <a href="@Url.Action("Index", "UsersAdmin")">
                            <i class="fa fa-users"></i> <span>Users</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Courses")">
                            <i class="fa fa-book"></i> <span>Courses</span>
                        </a>
                    </li>


                    <li>
                        <a href="@Url.Action("Index", "StudentStatus")">
                            <i class="fa fa-user-secret"></i> <span>Student Status</span>
                        </a>
                    </li>
                }
                <li style="">
                    @Html.Partial("_LoginPartial")

                </li>

            </ul>

        </div>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="javascript:void();">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                </ul>


            </nav>
        </header>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <!--End topbar header-->
        <div class="clearfix"></div>

        <div class="content-wrapper">
            <div class="container-fluid">
                <!--Start Dashboard Content-->
                @RenderBody()
                <!--End Dashboard Content-->
                <!--start overlay-->
                <div class="overlay toggle-menu"></div>
                <!--end overlay-->

            </div>
            <!-- End container-fluid-->

        </div><!--End content-wrapper-->
        <!--Start Back To Top Button-->
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
        <!--End Back To Top Button-->
        <!--Start footer-->
        <footer class="footer">
            <div class="container">
                <div class="text-center">
                    Copyright © @DateTime.Today.Year Dev team Jomber
                </div>
            </div>
        </footer>
        <!--End footer-->


    </div><!--End wrapper-->
    <!-- simplebar js -->
    <!-- sidebar-menu js -->
    <!-- loader scripts -->
    @*<script src="assets/js/jquery.loading-indicator.js"></script>*@
    <!-- Custom scripts -->
    <!-- Index js -->
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>


</html>
